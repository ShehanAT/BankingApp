<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="customer" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>co.spraybot.model.Customer</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/ServletTesting"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="shehan"/>
            <property name="hibernate.connection.password" value="shehan"/>
        </properties>
    </persistence-unit>
</persistence>